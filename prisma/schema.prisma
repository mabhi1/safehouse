generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model cards {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  bank      String
  createdAt DateTime @db.Date
  cvv       String
  expiry    String
  number    String
  type      CardType
  uid       String
  updatedAt DateTime @db.Date
}

enum CardType {
  credit
  debit
}

model notes {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  v           Int      @map("__v")
  createdAt   DateTime @db.Date
  description String
  name        String
  uid         String
  updatedAt   DateTime @db.Date
}

model passwords {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  createdAt DateTime @db.Date
  password  String
  site      String
  uid       String
  updatedAt DateTime @db.Date
  username  String
}

model shortcuts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  createdAt DateTime @db.Date
  image     String
  name      String
  uid       String
  updatedAt DateTime @db.Date
  url       String
}

model tasks {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  v           Int      @map("__v")
  createdAt   DateTime @db.Date
  description String
  from        String
  title       String
  to          String
  uid         String
  updatedAt   DateTime @db.Date
}
